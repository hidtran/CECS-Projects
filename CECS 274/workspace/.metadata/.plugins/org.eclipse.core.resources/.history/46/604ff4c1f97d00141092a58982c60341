package Heap;

public class HeapTree {
	Node root;
	
	public HeapTree()
	{
		root = null;
	}
	
	private class Node
	{
		int data;
		Node left;
		Node right;
		
		public Node()
		{
			data = 0;
			left = null;
			right = null;
		}
		
		public Node(int number)
		{
			data = number;
			left = null;
			right = null;
		}
		
		public void setData(int number)
		{
			data = number;
		}
		
		public int getData()
		{
			return data;
		}
		
		public void setChildren(Node leftSide, Node rightSide)
		{
			left = leftSide;
			right = rightSide;
		}
		
		public Node getLeftChildren()
		{
			return left;
		}
		
		public Node getRightChildren()
		{
			return right;
		}
	}
}