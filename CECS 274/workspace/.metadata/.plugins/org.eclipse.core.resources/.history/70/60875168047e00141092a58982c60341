	public static void menu()
	{
		Scanner scan = new Scanner(System.in);
		Random random = new Random();
		Tree newTree = new Tree();
		int[] array;
		int number = 0;
		int input = 0;
		boolean exit = false;
		do
		{
			System.out.println("Choose one of the following options: ");
