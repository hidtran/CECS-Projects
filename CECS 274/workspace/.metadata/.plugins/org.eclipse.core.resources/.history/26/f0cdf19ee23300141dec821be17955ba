public class Card 
{
	int suite = 0;
	int value = 0;
	
	public Card(int initialValue, int initialSuite)
	{
		value = initialValue;
		suite = initialSuite; 
	}
	
	//Return card value
	
	public int getValue()
	{
		return value;
	}
	
	//Input card value
	public void setValue(int amount)
	{
			value = amount;		
	}
	
	//Return a card suite
	public int getSuite()
	{
		return suite;
	}
	
	//Set a card suite
	public void setSuite(int amount)
	{
		suite = amount;
	}	
}