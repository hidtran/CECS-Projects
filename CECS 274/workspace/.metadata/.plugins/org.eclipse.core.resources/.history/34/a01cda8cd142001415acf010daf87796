import java.util.Scanner;

public class Hand {
	Card[] myHand;
	int handSize;
	Scanner input = new Scanner(System.in);
	
	public Hand(int amount)
	{
		myHand = new Card[amount];
		handSize = 0;
	}
	
	public int handValue()
	{
		int cardValue = 0;
		int total = 0;
		int ace = 0;
		
		for(int index = 0; index < handSize; index++)
		{	
			if (total < 21)
			{
				cardValue = myHand[index].getValue(); 
				//System.out.println("Card Value: " + cardValue);
				if(cardValue == 1)
				{
					ace++;
					total += ace;
				}
				else if(cardValue >= 11 && cardValue <= 13)
				{
					total += 10;
					//System.out.println("Your total: " + total);
					if(ace > 0)
					{
						if(total <= 10)
						{
							total += 10;
							//System.out.println("Your total: " + total);
						}
						ace = 0;
					}
				}
				else if(cardValue >= 2 && cardValue <= 10)
				{
					total += cardValue;
					//System.out.println("Your total: " + total);
					if(ace > 0)
					{	
						if(total <= 10)
						{
							total += 10;
							//System.out.println("Your total: " + total);
						}
					   ace = 0;
					}
				}
			}
		}
		return total;
	}

	
	public void addCard(Card newHand)
	{
		System.out.println("Hand Size: " + handSize);
		myHand[handSize++] = newHand;
	}
	
	public int resetHand()
	{
		handSize = 0;
		return handSize;
	}
	
	public void showHand()
	{
		for (int index = 0; index < handSize; index++)
		{
			System.out.println(myHand[index].toString());
		}
	}
	
}