#include <iostream>
#include <string>
#include <algorithm>
#include <fstream>

using namespace std;

void fileStream();

int main(int argc, char* argv[]){

	string s = "Hello.My.World:CSULB";
	char c = s.at(6);
	string substr = s.substr(2, 6);
	int length = s.length();
	int index = s.find_first_of(':');
	reverse(s.begin(), s.end());
	replace(s.begin(), s.end(), '.', '+');

	fileStream();

}

void fileStream(){

	char *stream;
	streampos size;
	ifstream file;
	file.open("numbers.txt", ios::in|ios::ate);
	int mean;

	if(file.is_open()) {

		stream = new char[size];
		file.seekg(0, ios::beg);
		file.read(stream, size);
		file.close();

		for(int index = 0; index < size; index++){

			mean += stream[index];

		}

		mean /= size;

	}

	cout << "Mean: " << mean << endl;

}



