#include <iostream>
#include <string>
#include <algorithm>
#include <fstream>

using namespace std;

void fileStream();

int main(int argc, char* argv[]){

	string s = "Hello.My.World:CSULB";
	char c = s.at(6);
	string substr = s.substr(2, 6);
	int length = s.length();
	int index = s.find_first_of(':');
	reverse(s.begin(), s.end());
	replace(s.begin(), s.end(), '.', '+');

	fileStream();

}

void fileStream(){

	ifstream file;
	file.open("numbers.txt");
	char stream[10];
	int mean;

	while(!file.eof()) {



		file >> stream;

		for(int index = 0; index < 10; index++){

			mean += stream[index];

		}

		mean /= 10;

	}

	cout << "Mean: " << mean << endl;

	file.close();
}



